<div class="container">
  <h2 class="text-center">Our Actors</h2>
  <hr>
    {{#each actors}}
    <li "button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
      <span><b>Name: </b>{{firstName}} {{lastName}}</span>
    <div class="button-group">
      <button class="btn btn-sm btn-primary" id="viewActor" data-toggle="modal" data-target="#viewActorModal" data-id="{{ id }}" data-firstName="{{ firstName }}" data-lastName="{{ lastName }}"  
      ><i class="fas fa-eye mr-2"></i>View
      </button>
      <button type="button" class="btn btn-sm btn-warning" id="editActor" data-toggle="modal" data-target="#updateActorModal" data-id="{{ id }}" data-firstName="{{ firstName }}" data-lastName="{{ lastName }}" 
      ><i class="fas fa-edit mr-2"></i>Edit
      </button>
      <button class="btn btn-sm btn-danger" id="deleteActor" data-id="{{ id }}" data-firstName="{{ firstName }}" data-lastName="{{ lastName }}"><i class="fas fa-trash-alt mr-2"></i>Delete
      </button>
    </div>
    </li>
    {{/each}}
  </ul>
</div>

<div class="container">
  <h4 class="text-center">Add a Actor</h4>
  <form id="create-actor-form">
    <div class="form-group">
      <label for="firstName">First Name</label>
      <input
        class="form-control"
        placeholder="Enter the first name..."
        type="text"
        id="firstName"
      />
    </div>

    <div class="form-group">
      <label for="lastName">Last Name:</label><br />
      <input
        class="form-control"
        type="text"
        placeholder="Enter the last name..."
        id="lastName"
      />
    </div>

    <button type="submit" class="btn btn-primary">Add Actor</button>
  </form>
</div>

{{!-- Modal to view a selected actor --}}
<div class="modal fade" id="viewActorModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">View Actor</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="update-actor-form">
          <div class="form-group">
            <label for="viewFirstName" class="col-form-label">First Name:</label>
            <input type="text" class="form-control" id="viewFirstName">
          </div>
          <div class="form-group">
            <label for="viewLastName" class="col-form-label">Last Name:</label>
            <input type="text" class="form-control" id="viewLastName"></input>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{!-- Modal to update a selected actor --}}
<div class="modal fade" id="updateActorModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Actor</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="update-actor-form">
          <div class="form-group">
            <label for="updatedFirstName" class="col-form-label">First Name:</label>
            <input type="text" class="form-control" id="updatedFirstName">
          </div>
          <div class="form-group">
            <label for="updatedLastName" class="col-form-label">Last Name:</label>
            <input type="text" class="form-control" id="updatedLastName"></input>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save actor</button>
      </div>
    </div>
  </div>
  
</div>